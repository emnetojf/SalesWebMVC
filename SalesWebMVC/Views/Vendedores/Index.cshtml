@model IEnumerable<SalesWebMVC.Models.Vendedor>


@{
    ViewData["Title"] = "Vendedores";
}

<h2> @ViewData["Title"]</h2>


<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th> @Html.DisplayNameFor(model => model.Nome) </th>

            <th> @Html.DisplayNameFor(model => model.Email) </th>

            <th> @Html.DisplayNameFor(model => model.DataNasc) </th>

            <th> @Html.DisplayNameFor(model => model.SalarioBase) </th>

            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th> @Html.DisplayFor(modelitem => item.Nome) </th>
           
                <th> @Html.DisplayFor(modelitem => item.Email) </th>
            
                <th> @Html.DisplayFor(modelitem => item.DataNasc) </th>
           
                <th> @Html.DisplayFor(modelitem => item.SalarioBase) </th>
                
                
                <th>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </th>
            </tr>          
        }
    </tbody>

</table>
